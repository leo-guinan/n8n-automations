{
    "$schema": "https://app.flightcontrol.dev/schema.json",
    "environments": [
        {
            "id": "production",
            "name": "Production",
            "region": "us-east-1",
            "source": {
                "branch": "main"
            },
            "services": [
                {
                    "id": "n8n",
                    "name": "n8n",
                    "type": "web",
                    "target": {
                        "type": "fargate"
                    },
                    "buildType": "docker",
                    "ci": {
                        "type": "ec2"
                    },
                    "dockerfilePath": "Dockerfile",
                    "dockerContext": ".",
                    "cpu": 0.5,
                    "memory": 1,
                    "minInstances": 1,
                    "maxInstances": 1,
                    "envVariables": {
                        "N8N_HOST": "n8n.ideanexusventures.com",
                        "N8N_PROTOCOL": "https",
                        "DB_TYPE": "postgresdb",
                        "DB_POSTGRESDB_DATABASE": "postgres",
                        "N8N_PORT": 3000,
                        "DB_POSTGRESDB_HOST": {
                            "fromService": {
                                "id": "db",
                                "value": "host"
                            }
                        },
                        "DB_POSTGRESDB_PORT": {
                            "fromService": {
                                "id": "db",
                                "value": "port"
                            }
                        },
                        "DB_POSTGRESDB_USER": {
                            "fromService": {
                                "id": "db",
                                "value": "username"
                            }
                        },
                        "DB_POSTGRESDB_PASSWORD": {
                            "fromService": {
                                "id": "db",
                                "value": "password"
                            }
                        },
                        "DB_POSTGRESDB_SSL_ENABLED": "true"
                    }
                },
                {
                    "id": "db",
                    "name": "Postgres",
                    "type": "rds",
                    "engine": "postgres",
                    "engineVersion": "16",
                    "instanceSize": "db.t4g.micro",
                    "storage": 20,
                    "private": true,
                    "backupRetentionPeriodInDays": 7,
                    "deletionProtection": true
                },
                {
                    "id": "appdatadb",
                    "name": "Appdata Postgres",
                    "type": "rds",
                    "engine": "postgres",
                    "engineVersion": "16",
                    "instanceSize": "db.t4g.micro",
                    "storage": 20,
                    "private": true,
                    "backupRetentionPeriodInDays": 7,
                    "deletionProtection": true
                }
            ]
        }
    ]
}